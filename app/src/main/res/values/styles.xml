<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- default color of ANY text (menu items, labels, etc. ) unless color attribute is overridden -->
        <item name="android:textColorPrimary">@color/primaryTextColor</item>

        <!-- color of the default background -->
        <item name="android:windowBackground">@color/backgroundColor</item>

    </style>

    <!--- cryptotracker text style -->

    <style name="cryptotrackerText" parent="Base.TextAppearance.AppCompat.Caption">
        <item name="android:lineSpacingExtra">4sp</item>
    </style>


    <style name="cryptotrackerText.CaptionSmall" parent="cryptotrackerText">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="cryptotrackerText.Caption" parent="cryptotrackerText">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="cryptotrackerText.CaptionAlternate" parent="cryptotrackerText">
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="cryptotrackerText.Title" parent="cryptotrackerText">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="cryptotrackerText.TitleAlternate" parent="cryptotrackerText">
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="cryptotrackerText.Body" parent="cryptotrackerText">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="cryptotrackerText.BodyAlternate" parent="cryptotrackerText">
        <item name="android:textColor">@color/tertiaryTextColor</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="cryptotrackerText.BodyTertiary" parent="cryptotrackerText">
        <item name="android:textColor">@color/tertiaryTextColor</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="cryptotrackerText.Body1" parent="cryptotrackerText">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="cryptotrackerText.Body1Alternate" parent="cryptotrackerText">
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="cryptotrackerText.Body2" parent="cryptotrackerText">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="cryptotrackerText.Body3" parent="cryptotrackerText">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="cryptotrackerText.Big" parent="cryptotrackerText">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">34sp</item>
    </style>

    <style name="cryptotrackerText.Huge" parent="cryptotrackerText">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">42sp</item>
    </style>

    <style name="SearchSwitchTheme">
        <item name="colorControlActivated">@color/switchColor</item>
    </style>

</resources>
